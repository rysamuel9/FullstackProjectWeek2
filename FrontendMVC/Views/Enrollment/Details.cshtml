            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EnrollmentID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EnrollmentID)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.StudentID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StudentID)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CourseID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CourseID)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Grade)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Grade)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-warning" asp-controller="Enrollment" asp-action="Update">Edit</a>
