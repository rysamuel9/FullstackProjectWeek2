@model FrontendMVC.Models.Enrollment

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EnrollmentID" class="control-label"></label>
                <input asp-for="EnrollmentID" class="form-control" readonly="readonly" />
                <span asp-validation-for="EnrollmentID" class="text-danger"></span>
            </div>
            <div class="mb-3 mt-3">
                <label asp-for="StudentID" class="form-label"></label>
                <select asp-for="StudentID" class="form-control" asp-items="@ViewBag.Student">
                    <option value="">== SELECT STUDENT ==</option>
                </select>
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="mb-3 mt-3">
                <label asp-for="CourseID" class="form-label"></label>
                <select asp-for="CourseID" class="form-control" asp-items="@ViewBag.Course">
                    <option value="">== SELECT COURSE ==</option>
                </select>
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>
            <div class="mb-3 mt-3">
                <label asp-for="Grade" class="control-label"></label>
                <select asp-for="Grade" asp-items="@Html.GetEnumSelectList<Grade>()" class="form-control">
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
