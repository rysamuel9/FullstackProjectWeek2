@model FrontendMVC.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-4">Delete Student</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="Student" asp-action="Index">Student List</a></li>
    <li class="breadcrumb-item active">Delete Student</li>
</ol>

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <div>

                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ID)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ID)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.LastName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LastName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.FirstMidName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FirstMidName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.EnrollmentDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.EnrollmentDate)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-info" asp-controller="Student" asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
