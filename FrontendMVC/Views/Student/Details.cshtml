@model FrontendMVC.Models.Student

@{
    ViewData["Title"] = "Details";
}


<h1 class="mt-4">Detail Student</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="Student" asp-action="Index">Student List</a></li>
    <li class="breadcrumb-item active">Detail</li>
</ol>

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Detail Student</h4>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ID)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FirstMidName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FirstMidName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EnrollmentDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EnrollmentDate)
                </dd>
            </dl>
        </div>
        <div class="mb-3">
            <a class="btn btn-warning" asp-controller="Student" asp-action="Update">Edit</a>
            <a class="btn btn-info" asp-controller="Student" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
