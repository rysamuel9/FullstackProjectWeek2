@model FrontendMVC.ViewModels.StudentCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4">Create Student</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Create Student</li>
</ol>

<div class="card-mb-4">
    <div class="card-body">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-mb-3 col-mt-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-mb-3 col-mt-3">
                            <label asp-for="FirstMidName" class="form-label"></label>
                            <input asp-for="FirstMidName" class="form-control" />
                            <span asp-validation-for="FirstMidName" class="text-danger"></span>
                        </div>
                        <div class="col-mb-3 col-mt-3">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
